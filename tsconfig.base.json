{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "paths": {
      "@a2000/marquee": ["packages/marquee/src"],
      "@a2000/button": ["packages/button/src"],
    }
  },
  "exclude": ["node_modules", "packages/**/tests", "./packages/**/lib/**/*"]
}
